{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "sourceMap": true,
        "noLib": false,
        "suppressImplicitAnyIndexErrors": false,
        "lib": [
            "dom",
            "es2015"
        ]
    },
    "exclude": [
        "node_modules",
        "typings",
        "test",
        "bower_components"
    ]
}